<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="net.notifly.core.gui.activity.main.MainActivity$PlaceholderFragment">

    <com.fortysevendeg.swipelistview.SwipeListView
        android:id="@+id/notes_list_view"
        android:listSelector="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        swipe:swipeFrontView="@+id/notes_list_front"
        swipe:swipeBackView="@+id/notes_list_back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeOpenOnLongPress="false"
        swipe:swipeMode="left"
        swipe:swipeOffsetLeft="50dp"
        swipe:swipeOffsetRight="50dp"/>
</RelativeLayout>
